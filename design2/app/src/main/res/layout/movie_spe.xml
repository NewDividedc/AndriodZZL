<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/moviePic"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <View
                    android:id="@+id/line"
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="#000000" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/line"
                    android:id="@+id/movieTitle">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="花样年华"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_alignLeft="@+id/name"
                        android:layout_marginTop="10dp"
                        android:text="剧情 文艺 | 中国香港 | 98分钟 |2000年" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movieTitle"
                    android:layout_alignLeft="@id/movieTitle"
                    android:layout_marginTop="20dp"
                    android:text="这是一段很长很长的简介" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brief"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@id/movieTitle"
                    android:id="@+id/detail">

                    <RelativeLayout
                        android:id="@+id/cnNameGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/chNameTitle"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:text="中文名" />

                        <TextView
                            android:id="@+id/chName"
                            android:layout_toRightOf="@id/chNameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中文名" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/oriNameGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cnNameGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/oriNameTitle"
                            android:text="外文名"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/oriName"
                            android:layout_toRightOf="@id/oriNameTitle"
                            android:text="外文名"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/othNameGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oriNameGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/othNameTitle"
                            android:text="外文名"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/othName"
                            android:layout_toRightOf="@id/othNameTitle"
                            android:text="外文名"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/proTimeGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/othNameGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/proTimeTitle"
                            android:text="出品时间"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/proTime"
                            android:layout_toRightOf="@id/proTimeTitle"
                            android:text="出品时间"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/countryGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/proTimeGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/countryTitle"
                            android:text="制片地区"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/country"
                            android:layout_toRightOf="@id/countryTitle"
                            android:text="制片地区"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/genreGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/countryGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/genreTitle"
                            android:text="类型"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/genre"
                            android:layout_toRightOf="@id/genreTitle"
                            android:text="类型"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/durationGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/genreGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/durationTitle"
                            android:text="时长"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/duration"
                            android:layout_toRightOf="@id/durationTitle"
                            android:text="时长"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dataReleasedGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/durationGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/dataReleasedTitle"
                            android:text="上映时间"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/dataReleased"
                            android:layout_toRightOf="@id/dataReleasedTitle"
                            android:text="上映时间"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/languageGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dataReleasedGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/languageTitle"
                            android:text="对白语言"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/language"
                            android:layout_toRightOf="@id/languageTitle"
                            android:text="对白语言"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/directorGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/languageGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/directorTitle"
                            android:text="导演"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/director"
                            android:layout_toRightOf="@id/directorTitle"
                            android:text="导演"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/actorGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/directorGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/actorTitle"
                            android:text="演员"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/actor"
                            android:layout_toRightOf="@id/actorTitle"
                            android:text="演员"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imbdIDGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/actorGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/imbdIDTitle"
                            android:text="imbd编码"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imbdID"
                            android:layout_toRightOf="@id/imbdIDTitle"
                            android:text="imbd编码"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imbdRatingGro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imbdIDGro"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/imbdRatingTitle"
                            android:text="imbd评分"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imbdRating"
                            android:layout_toRightOf="@id/imbdRatingTitle"
                            android:text="imbd评分"/>
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>